--// KitK4t Farewell Hub - LocalScript
--// Coloque este script dentro de StarterPlayer > StarterPlayerScripts

-- Criar a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KitK4tHub"
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Criar o Frame principal
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 420, 0, 250)
mainFrame.Position = UDim2.new(0.5, -210, 0.5, -125)
mainFrame.BackgroundColor3 = Color3.fromRGB(235, 235, 235)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Sombra e bordas
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 12)
uiCorner.Parent = mainFrame

local uiStroke = Instance.new("UIStroke")
uiStroke.Color = Color3.fromRGB(180, 180, 180)
uiStroke.Thickness = 1.4
uiStroke.Parent = mainFrame

-- Cabeçalho
local header = Instance.new("Frame")
header.Name = "Header"
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(210, 210, 210)
header.BorderSizePixel = 0
header.Parent = mainFrame

local headerText = Instance.new("TextLabel")
headerText.Size = UDim2.new(1, -40, 1, 0)
headerText.Position = UDim2.new(0, 10, 0, 0)
headerText.BackgroundTransparency = 1
headerText.Text = "KitK4t Hub"
headerText.TextColor3 = Color3.fromRGB(40, 40, 40)
headerText.Font = Enum.Font.GothamBold
headerText.TextSize = 18
headerText.TextXAlignment = Enum.TextXAlignment.Left
headerText.Parent = header

-- Botão de fechar
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.TextSize = 18
closeButton.Font = Enum.Font.GothamBold
closeButton.Parent = mainFrame

local cornerClose = Instance.new("UICorner")
cornerClose.CornerRadius = UDim.new(0, 6)
cornerClose.Parent = closeButton

-- Mensagem
local messageLabel = Instance.new("TextLabel")
messageLabel.Size = UDim2.new(1, -20, 0, 130)
messageLabel.Position = UDim2.new(0, 10, 0, 50)
messageLabel.BackgroundTransparency = 1
messageLabel.TextWrapped = true
messageLabel.TextColor3 = Color3.fromRGB(30, 30, 30)
messageLabel.Font = Enum.Font.Gotham
messageLabel.TextSize = 16
messageLabel.Text = "Olá, tudo bem? Espero que sim.\nHoje, 24/10/2025, é a despedida da KitK4t no Brookhaven.\n\n" ..
                    "Hello, how are you? I hope you're doing well.\nToday, October 24th, 2025, marks the farewell of KitK4t in Brookhaven."
messageLabel.Parent = mainFrame

-- Botão de Discord
local discordButton = Instance.new("TextButton")
discordButton.Name = "DiscordButton"
discordButton.Size = UDim2.new(0, 200, 0, 35)
discordButton.Position = UDim2.new(0.5, -100, 1, -45)
discordButton.BackgroundColor3 = Color3.fromRGB(114, 137, 218)
discordButton.Text = "Entre em nosso Discord!"
discordButton.TextColor3 = Color3.new(1, 1, 1)
discordButton.TextSize = 16
discordButton.Font = Enum.Font.GothamBold
discordButton.Parent = mainFrame

local discordCorner = Instance.new("UICorner")
discordCorner.CornerRadius = UDim.new(0, 8)
discordCorner.Parent = discordButton

local discordStroke = Instance.new("UIStroke")
discordStroke.Color = Color3.fromRGB(90, 110, 190)
discordStroke.Thickness = 1.2
discordStroke.Parent = discordButton

-- Função para abrir/copiar o link do Discord
local function openDiscord()
	local link = "https://discord.gg/78yaDCbYuJ"
	if setclipboard then
		setclipboard(link)
		game.StarterGui:SetCore("SendNotification", {
			Title = "Link copiado!",
			Text = "Convite do Discord copiado para sua área de transferência.",
			Duration = 4
		})
	else
		game.StarterGui:SetCore("SendNotification", {
			Title = "Discord",
			Text = "Copie o link manualmente: "..link,
			Duration = 5
		})
	end
end

discordButton.MouseButton1Click:Connect(openDiscord)

-- Sistema para fechar o hub
closeButton.MouseButton1Click:Connect(function()
	mainFrame:Destroy()
end)
